<section class="index">
  <div class="image">
    <div class="wrapper">
      <div class="hero-unit">
      <h1>instant one-day adventure!</h1>
      <p>choose a trip</p>
      </div>
      {{#if controller.loaded}}
        <div class="buttons">
          {{#each itinerary in controller.itineraries}}
            {{#view view.itineraryButton}}{{itinerary.description}}{{/view}}
          {{/each}}
        </div>
      {{else}}
        {{view App.LoaderWidgetView}}
      {{/if}}
  </div>
</section>
{{#if waiting}}
  {{view App.LoaderModalView}}
{{/if}}