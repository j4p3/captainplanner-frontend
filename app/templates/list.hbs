<section id="place-list">
	{{#each model}}
		{{#linkTo 'item' this}}
		<div class="place">
	      <img {{bindAttr src="place.img_url"}} style="height:130px; width: 130px;"/>
	      <div class="blurb">
	        <h1>{{place.name}}</h1>
	        <p>
	        	{{#if place.description}}
	        		{{place.description}}
	        	{{else}}
	        		"{{place.reviews.1.text}}"
	        	{{/if}}
	        </p>
	      </div>
	    </div>
		{{/linkTo}}
		<span class="arrow up" {{action shiftUp id target="App.day"}}></span>
		<span class="arrow down" {{action shiftDown id target="App.day"}}></span>
	{{/each}}
</section>